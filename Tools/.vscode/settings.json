{
    "typescript.tsdk": "node_modules\\typescript\\lib",

    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 4,
    "editor.useTabStops": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll": true
    },
}